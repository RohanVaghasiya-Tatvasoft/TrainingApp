    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/login.css">
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
</head>

<body>
    <div class="container-fluid">

        <div class="row">

            <div id="carouselExampleIndicators" class="carousel slide col-lg-8" data-ride="carousel">
                <div class="carousel-indicators">
                    <button type="button" id="indi" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
